<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义控件的名称 -->
    <declare-styleable name="TitleBar">

        <!-- 自定义的属性名称 和对应的单位 -->
        <attr name="leftName" format="string|reference" />
        <attr name="leftSize" format="dimension" />
        <attr name="leftColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <!--设置图标的在文字的位置-->
        <attr name="leftIconDirection">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="down" value="3" />
        </attr>

        <attr name="titleText" format="string|reference" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleShow" format="boolean" />


        <attr name="right1Icon" format="reference" />

        <attr name="right2Icon" format="reference" />
        <attr name="roght2Name" format="string|reference" />
        <attr name="right2Size" format="dimension" />
        <attr name="right2Color" format="color" />
        <!--设置图标的在文字的位置-->
        <attr name="right2IconDirection">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="down" value="3" />
        </attr>

        <attr name="backgroud" format="color|reference" />

    </declare-styleable>

</resources>